<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="504.0" prefWidth="256.0" style="-fx-background-color: #ebe8f9;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.leaguestorm.gui.SideMenuController">
   <children>
      <ImageView fx:id="userProfilePic" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="17.0" top="40.0" />
         </VBox.margin>
      </ImageView>
      <Label fx:id="lblFullName" alignment="CENTER" prefHeight="31.0" prefWidth="215.0" textAlignment="CENTER" textFill="#8e8e8e">
         <font>
            <Font name="Consolas" size="21.0" />
         </font>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="btnProfile" alignment="BASELINE_LEFT" graphicTextGap="22.0" mnemonicParsing="false" onAction="#handleProfileLinkAction" prefHeight="42.0" prefWidth="259.0" style="-fx-background-color: #ebe8f9; -fx-text-fill: #4e4e4e;" stylesheets="@style.css" text="Profile" textFill="#636363">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Person_32px.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets left="50.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
      <Button fx:id="btnOrders" alignment="BASELINE_LEFT" graphicTextGap="22.0" mnemonicParsing="false" onAction="#Orders" prefHeight="42.0" prefWidth="259.0" style="-fx-background-color: #ebe8f9; -fx-text-fill: #4e4e4e;" stylesheets="@style.css" text="Orders" textFill="#636363">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Xbox_Menu_32px.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets left="50.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
      <Button fx:id="btnPassword" alignment="BASELINE_LEFT" graphicTextGap="22.0" mnemonicParsing="false" onAction="#handleChangePasswordLinkAction" prefHeight="42.0" prefWidth="259.0" style="-fx-background-color: #ebe8f9; -fx-text-fill: #4e4e4e;" stylesheets="@style.css" text="Password" textFill="#636363">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="27.0" opacity="0.69" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_key_144px.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets left="50.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
      <Button fx:id="btnSettings" alignment="BASELINE_LEFT" graphicTextGap="22.0" mnemonicParsing="false" onAction="#handleProfileUpdateLinkAction" prefHeight="42.0" prefWidth="259.0" style="-fx-background-color: #ebe8f9; -fx-text-fill: #4e4e4e;" stylesheets="@style.css" text="Settings" textFill="#636363">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Slider__32px.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets left="50.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
      <Button fx:id="btnSignout" alignment="BASELINE_LEFT" graphicTextGap="22.0" mnemonicParsing="false" onAction="#handleExitButtonAction" prefHeight="42.0" prefWidth="259.0" style="-fx-background-color: #ebe8f9; -fx-text-fill: #4e4e4e;" stylesheets="@style.css" text="Sign out" textFill="#636363">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8_Sign_Out_32px.png" />
               </image>
            </ImageView>
         </graphic>
         <padding>
            <Insets left="50.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
   </children>
</VBox>
